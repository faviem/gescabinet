        <div class="panel-footer">
          <a type="button" class="btn btn-default btn-xm " href="#" id="retour"  style="font-size: 11px;" onclick=" $.ajax({type: 'GET', url: '{{ path('page_vide') }}', cache: false, success: function (data) {
