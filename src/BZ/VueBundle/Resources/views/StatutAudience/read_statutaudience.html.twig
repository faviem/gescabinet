{% extends "BZUserBundle::layout.html.twig"%}

{% block content_body %}
    <div class="col-md-9" style="margin-top: -2.7%;">
        <div class="panel panel-default">
            <div class="panel-body1 ">
                <div ><span style="font-size: 14px;font-weight: bold;"> GESTIONNAIRE DES STATUTS AUDIENCES </span> 
                
                    <a href="{{ path('create_statutaudience')}}" class="btn btn-xm btn-default  createformulaire" style="float: right;font-size: 11px;background: rgb(70, 136, 71);color: white;"> <i class="fa fa-plus"> </i><span> Ajouter </span></a>
                
                    <a href="#" class="btn btn-xm btn-default createformulaire"  style="float: right;margin-right: 1%;font-size: 11px;"> <i class="fa fa-print"> </i><span> Imprimer </span></a>
                </div>
            <hr/>
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                        Actions 
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Statut Audience
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set nbre = 0 %}
                                {% for element in  statutaudiences %}
                                    <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                        {% set nbre = nbre+1 %}
                                        <td class="sorting_1" style="text-align: center;">
                                            <a href="{{ path('update_statutaudience', {'id':  element.id }) }}" class="btn btn-default btn-xs createformulaire" data-toggle="modal" data-target="#myModalu" style="font-size: 11px;background: #FFD34F;"><i class="fa fa-edit"> </i> </a>
                                            <a href="{{ path('delete_statutaudience', {'id':  element.id }) }}" class="btn btn-default btn-xs createformulaire" data-toggle="modal" data-target="#myModal" style="font-size: 11px;background: #a81a20;color: white;"><i class="fa  fa-trash-o"> </i> </a>
                                        </td>
                                        <td class="" style="font-size: 12px;">{{  element.libelle }} </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    

    <div id='afficheformulaire'>

    </div>

                                
 </div>
                                
                            
{% endblock content_body %}
{% block javascript %} 
    <script>
        // Notifications();      
        $('.createformulaire').click(function (event) {
            var buton = $(this);
            $('#afficheformulaire').html('');
            $.ajax({
                type: 'GET',
                url: buton.attr('href'),
                cache: false,
                success: function (data) {
                    $('#afficheformulaire').html(data);
                    // $('#frm_createVille').dialog();
                },
                error: function () {
                    alert('requête échouée');
                }});
            //we dont what the browser to submit the form
            event.preventDefault();
        });

    </script>
{% endblock javascript %}
