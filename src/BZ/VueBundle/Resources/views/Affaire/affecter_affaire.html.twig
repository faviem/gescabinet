                  <span class='tachat_img hide'><img src="{{ asset('/images/712.GIF') }}" alt="Second slide" class='img-circle' style="height: 20px;width: 20px;"> Affectation en cours ...</span>
        </div>
    </div>
</div>
     
</form>
<script>
        $(".chzn-select").chosen();
     $('form').draggable();
     $("form").submit(function(event) {
            var $this = $(this);
             $('.tachat_img').removeClass('hide');
             $.ajax({
                   type: $this.attr('method'),
                   url: $this.attr('action'),
                   cache: false,
                   data: $this.serialize(),
                   success: function() {
                     $('.tachat_img').addClass('hide');
                     location.reload();
                   },
                   error: function() {
                      // $('.tachat_img').removeClass('hide');
                   }
               });
               //we dont what the browser to submit the form
               event.preventDefault();
           });
</script></div>