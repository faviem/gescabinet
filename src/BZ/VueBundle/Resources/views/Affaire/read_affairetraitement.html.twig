{% extends "BZUserBundle::layout.html.twig"%}

{% block content_body %}
    <div class="col-md-9" style="margin-top: -2.7%;">
        <div class="panel panel-default">
            <div class="panel-body1 ">
                <div ><span style="font-size: 14px;font-weight: bold;"> DOSSIERS EN COURS DE TRAITEMENT </span> 
                        <a href="#" class="btn btn-xm btn-default createformulaire"  style="float: right;margin-right: 1%;font-size: 11px;"> <i class="fa fa-print"> </i><span> Imprimer </span></a>
                </div>
                <hr/>
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                        Actions 
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        N° Affaire
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Date dossier
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Client
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Contact(s) Client
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Date mise en traitement
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Affecter A :
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Etat
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set nbre = 0 %}
                                {% for element in  affaires %}
                                   {% for elt in  element.tacheaffaires %}
                                    <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                        {% set nbre = nbre+1 %}
                                        <td class="sorting_1" style="text-align: center;">
                                            <a href="{{ path('consulter_affaire', {'id':  element.id }) }}" class="btn btn-default btn-xs createformulaire" data-toggle="modal" data-target="#myModal" style="font-size: 11px;"><i class="fa  fa-folder-open-o"  title="Consulter le dossier"> </i> </a>
                                            <a href="{{ path('delete_tacheaffaire', {'id':  elt.id }) }}" class="btn btn-default btn-xs createformulaire" data-toggle="modal" data-target="#myModal" style="font-size: 11px;background: #a81a20;color: white;"><i class="fa  fa-trash-o"  title="Supprimer le traitement"> </i> </a>
                                            <a href="{{ path('archiver_affaire', {'id':  element.id }) }}" class="btn btn-default btn-xs createformulaire" data-toggle="modal" data-target="#myModal" style="background: rgb(70, 136, 71);color: white;font-size: 11px;"><i class="fa  fa-download"  title="Archiver le dossier"> </i> </a>
                                            <a href="{{ path('consulter_tacheaffaire', {'id':  elt.id }) }}" class="btn btn-default btn-xs"  style="font-size: 11px;"><i class="fa  fa-align-center"  title="Consulter les audiences"> </i> </a>
                                           <a href="{{ path('affecter_affaire', {'id':  element.id }) }}" class="btn btn-default btn-xs createformulaire" data-toggle="modal" data-target="#myModal" style="background: #000055;color: white;font-size: 11px;"><i class="fa  fa-user-md"  title="Assigner à des avocats"> </i> </a>
                                        </td>
                                        <td class="" style="font-size: 12px;text-align: center;"> 
                                            {{ element.numeroaffaire }}  
                                           </td>
                                        <td class="" style="font-size: 12px;text-align: center;"> 
                                            {{ element.dateaffaire|date('d/m/Y') }} </td>
                                        <td class="" style="font-size: 12px;"> 
                                            {{ element.clientphysique.nom }}  </td>
                                        <td class="" style="font-size: 12px;"> 
                                            {{ element.clientphysique.telmobile }}  
                                           </td>
                                        <td class="" style="font-size: 12px;text-align: center;">
                                            <div class="dropdown">
                                                <a href="#" title="" data-toggle="dropdown" aria-expanded="false">
                                                      {{ elt.dateassignee|date('d/m/Y')  }} -  {{ elt.dateassignee|date('H:i')  }} 
                                                    <div class="ripple-wrapper"></div></a>
                                                <ul class="dropdown-menu float-right" style="text-align: left;">
                                                    <li>
                                                        <a href="#" title="" style="display: block;">
                                                            {{ elt.note }}
                                                        </a>
                                                    </li>
                                                   </ul>
                                            </div>
                                        </td>
                                        <td class="" style="font-size: 12px;text-align: center;">
                                            {{ elt.agentdestinataire.nomPrenom }}
                                        </td>
                                        <td class="" style="font-size: 12px;text-align: center;">
                                            {%if elt.estresolue== 0 %}
                                            <i class="fa fa-star icon-state-warning"></i>
                                            {% else  %}
                                                <i class="fa fa-star"></i>
                                                {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
             </div>
        </div>

        <div id='afficheformulaire'>

        </div>

    </div>

{% endblock content_body %}
{% block javascript %} 
    <script>
        // Notifications();      
        $('.createformulaire').click(function (event) {
            var buton = $(this);
            $('#afficheformulaire').html('');
            $.ajax({
                type: 'GET',
                url: buton.attr('href'),
                cache: false,
                success: function (data) {
                    $('#afficheformulaire').html(data);
                    // $('#frm_createVille').dialog();
                },
                error: function () {
                    alert('requête échouée');
                }});
            //we dont what the browser to submit the form
            event.preventDefault();
        });

    </script>
{% endblock javascript %}
