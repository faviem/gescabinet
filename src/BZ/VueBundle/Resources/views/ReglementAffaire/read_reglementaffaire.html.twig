{% extends "BZUserBundle::layout.html.twig"%}

{% block content_body %}
    <div class="col-md-9" style="margin-top: -2.7%;">
        <div class="panel panel-default">
            <div class="panel-body1 ">
                <div ><span style="font-size: 14px;font-weight: bold;"> GESTIONNAIRE DES REGLEMENTS DES HONORAIRES </span> 
                    <select style="width: 25%;margin-top: -4%;" id="getExercices" name="getExercices" class="form-control chzn-select">
                                        <option value="">--Choisissez l'exercice--</option>
                                        {% for exo  in  getExercices %}
                                            <option value="{{ exo.id }}" {% if exo.id==exercice %} selected="true" {% endif %}>{{exo.annee}}</option>
                                        {% endfor %}
                                    </select>
                </div>
                <hr/>
                <div class="but_list">
                    <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                        <ul id="myTab" class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="{% if choix == 1 %}active{% endif %}"><a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="false">Journal des Règlements </a></li>
                            <li role="presentation" class="{% if choix == 2 %}active{% endif %}"><a href="#profile" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile" aria-expanded="true">Affaires en attentes de règlement</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div role="tabpanel" class="tab-pane fade {% if choix == 1 %} active in {% endif %}" id="home" aria-labelledby="home-tab">
                                <div >
                                    <br/>
                                    <span style="font-size: 12px;font-weight: bold;"> JOURNAL DES REGLEMENTS </span>
                                    
                                    <a href="#" class="btn btn-xm btn-default createformulaire"  style="float: right;margin-right: 1%;font-size: 11px;"> <i class="fa fa-print"> </i><span> Imprimer </span></a>
                                    <hr/>

                                    <div class="table-responsive">
                                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                                <thead>
                                                    <tr role="row">
                                                        <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                                            Actions 
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                            Date Règlement
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                            N° Affaire
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                            Client
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                            Montant Réglé
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                            Mode Règlement
                                                        </th>
                                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                            P J
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% set nbre = 0 %}
                                                    {% set coutregle = 0 %}
                                                    {% for element in  reglementaffaires %}
                                                        <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                                            {% set nbre = nbre+1 %}
                                                            <td class="sorting_1" style="text-align: center;">
                                                                <a href="{{ path('update_reglementaffaire', {'id':  element.id }) }}" class="btn btn-default btn-xs createformulaire" style="font-size: 11px;"><i class="fa fa-edit"> </i> </a>
                                                                <a href="{{ path('delete_reglementaffaire', {'id':  element.id }) }}" class="btn btn-default btn-xs createformulaire" style="font-size: 11px;"><i class="fa  fa-trash-o"> </i> </a>
                                                            </td>
                                                            <td class="" style="font-size: 12px;">{{  element.datereglement |date('d/m/Y') }}  </td>
                                                            <td class="" style="font-size: 12px;">{{  element.affaire.numeroaffaire }}   </td>
                                                            <td class="" style="font-size: 12px;">{{  element.affaire.clientphysique.nom  }}   </td>
                                                            <td class="" style="font-size: 12px;text-align: right;">{{  element.montantregelement }}   </td>
                                                            <td class="" style="font-size: 12px;">{{  element.modereglement.libelle }}   </td>
                                                            <td class="" style="font-size: 12px;text-align: center;">
                                                                <div class="dropdown">
                                                                    <a href="#" title="" class="btn btn-xs btn-default " data-toggle="dropdown" aria-expanded="false">
                                                                        <i class="fa fa-copy"></i>
                                                                        <i class="fa fa-chevron-down icon_8"></i>
                                                                        <div class="ripple-wrapper"></div></a>
                                                                    <ul class="dropdown-menu float-right" style="text-align: left;">
                                                                        {% set nbre = 0 %}
                                                                        {% if element.piecereglement is not null  %}
                                                                            {% set nbre = nbre+1 %}
                                                                            <li>
                                                                                <a href="{{ asset( element.piecereglement.dowloadPath) }}" title="" target="_blank">
                                                                                    {{ element.piecereglement.alt }}
                                                                                </a>
                                                                            </li>
                                                                        {% endif %}
                                                                        {% if nbre==0 %}
                                                                            <li>
                                                                                <a href="#" title="" style="color: #770000;">
                                                                                    Aucune pièce n'est  joint à ce règlement ... !!! 
                                                                                </a>
                                                                            </li>
                                                                        {% endif  %}
                                                                    </ul>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        {% set coutregle = coutregle + element.montantregelement %}
                                                    {% endfor %}
                                                </tbody>
                                                <tfoot>
                                                <tr role="row">
                                                    <th  style="font-size: 13px;text-align: center;" colspan="4">
                                                        TOTAL 
                                                    </th>
                                                    <th style="font-size: 13px;text-align: right;" >
                                                        {{  coutregle }}
                                                    </th>
                                                </tr>
                                            </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane fade{% if choix == 2 %} active in {% endif %}" id="profile" aria-labelledby="profile-tab">
                                <br/>
                                <div >
                                    <span style="font-size: 12px;font-weight: bold;"> AFFAIRES NON ENCORES REGLEES </span> 
                                    <a href="#" class="btn btn-xm btn-default createformulaire"  style="float: right;margin-right: 1%;font-size: 11px;"> <i class="fa fa-print"> </i><span> Imprimer </span></a>
                                </div>
                                <hr/>
                                <div class="table-responsive">
                                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example1" aria-describedby="dataTables-example_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                                        Actions 
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                        N° Affaire
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                        Date dossier
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                        Client
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                        Contact(s) Client
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                        Montant de l'affaire
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                        Montant Restant
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% set nbre = 0 %}
                                                {% set cout = 0 %}
                                                {% set coutrest = 0 %}
                                                {% for element in  affaires %}
                                                    <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                                        {% set nbre = nbre+1 %}
                                                        <td class="sorting_1" style="text-align: center;">
                                                            <a href="{{ path('create_reglementaffaire', {'exercice': exercice, 'id' : element.id })}}" class="btn btn-default btn-xs createformulaire" style="font-size: 11px;color: black;"><i class="fa fa-plus"  title="modifier"> </i> </a>
                                                            </td>
                                                        <td class="" style="font-size: 12px;text-align: center;"> 
                                                            {{ element.numeroaffaire }}  
                                                        </td>
                                                        <td class="" style="font-size: 12px;text-align: center;"> 
                                                            {{ element.dateaffaire|date('d/m/Y') }} 
                                                        </td>
                                                        <td class="" style="font-size: 12px;text-align: center;"> 
                                                            {{ element.clientphysique.nom }}  
                                                        </td>
                                                        <td class="" style="font-size: 12px;text-align: center;"> 
                                                            {{ element.clientphysique.telmobile}}  
                                                        </td>
                                                        <td class="" style="font-size: 12px;text-align: right;">
                                                             {{ element.coutaffaire }}  
                                                        </td>
                                                        <td class="" style="font-size: 12px;text-align: right;">
                                                              {{ element.coutrestant }}  
                                                        </td>
                                                    </tr>
                                                     {% set cout = cout+element.coutaffaire %}
                                                     {% set coutrest =coutrest+element.coutrestant %}
                                                {% endfor %}
                                            </tbody>
                                             <tfoot>
                                                <tr role="row">
                                                    <th  style="font-size: 13px;text-align: center;" colspan="5">
                                                        TOTAL 
                                                    </th>
                                                    <th style="font-size: 13px;text-align: right;" >
                                                        {{  cout }}
                                                    </th>
                                                    <th style="font-size: 13px;text-align: right;" >
                                                        {{  coutrest }}
                                                    </th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id='afficheformulaire'>

        </div>

    </div>
{% endblock content_body %}
{% block javascript %} 
    <script>
          $('#getExercices').change(function() {
           // alert('route de la liste des estdirecteurtechniques de la structure '+$(this).val());
           if($(this).val()==="")
           {
               
           }
           else
           {
              var url='{{ path("read_reglementaffaire",{'exercice':  'exercice'}) }}';
              url=url.replace("exercice", $(this).val()==="" ? 0 : $(this).val());
              location.href=""+url+"";
           }
        });
        $('#dataTables-example1').dataTable();
        // Notifications();      
        $('.createformulaire').click(function (event) {
            var buton = $(this);
            $('#afficheformulaire').html('');
            $.ajax({
                type: 'GET',
                url: buton.attr('href'),
                cache: false,
                success: function (data) {
                    $('#afficheformulaire').html(data);
                    // $('#frm_createVille').dialog();
                },
                error: function () {
                    alert('requête échouée');
                }});
            //we dont what the browser to submit the form
            event.preventDefault();
        });

    </script>
{% endblock javascript %}
